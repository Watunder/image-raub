{
	"author": "Luis Blanco <luisblanco1337@gmail.com>",
	"name": "image-raub",
	"version": "3.2.0",
	"description": "Native Image loader for Node.js",
	"license": "MIT",
	"main": "index.js",
	"keywords": [
		"addon",
		"image",
		"decoder",
		"freeimage",
		"graphics"
	],
	"files": [
		"js",
		"core.js",
		"index.js",
		"index.d.ts",
		"install.js",
		"LICENSE",
		"package.json",
		"README.md"
	],
	"engines": {
		"node": ">=14.16.0",
		"npm": ">=6.14.1"
	},
	"scripts": {
		"postinstall": "node install",
		"eslint": "eslint .",
		"build": "cd src && node-gyp rebuild && cd ..",
		"test": "jest --coverage=false --watch",
		"test-ci": "jest --coverage=false --verbose",
		"test-coverage": "rm -rf doc/jest && jest --coverage --silent"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"node"
		],
		"testMatch": [
			"**/*.test.js"
		],
		"coverageDirectory": "doc/jest",
		"coverageReporters": [
			"lcov"
		],
		"collectCoverageFrom": [
			"**/*.js",
			"!**/*.test.js"
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/node-3d/image-raub.git"
	},
	"dependencies": {
		"addon-tools-raub": "5.3.x",
		"deps-freeimage-raub": "https://github.com/node-3d/deps-freeimage-raub.git",
		"segfault-raub": "1.2.x"
	},
	"devDependencies": {
		"eslint": "7.23.0",
		"eslint-plugin-jest": "24.3.3",
		"eslint-plugin-node": "11.1.0",
		"jest": "26.6.3",
		"typescript": "4.2.4"
	}
}
